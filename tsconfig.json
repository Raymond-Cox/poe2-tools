// This configuration is intended for IDE support + type checking only.
// Reference: https://stackoverflow.com/a/60223923
{
  "include": ["src"],
  "compilerOptions": {
    "types": ["vitest/globals"],
    "baseUrl": "./src",
    "paths": {
      "components/*": ["components/*"],
      "types/*": ["types/*"],
      "utils/*": ["utils/*"],
      "hooks/*": ["hooks/*"],
      "data/*": ["data/*"]
    },
    "checkJs": true,
    "noEmit": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "lib": ["esnext", "dom"],
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true
  }
}
