// This configuration is intended for IDE support + type checking only.
// Reference: https://stackoverflow.com/a/60223923
{
  "include": ["src"],
  "compilerOptions": {
    "checkJs": true,
    "noEmit": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "lib": ["esnext", "dom"],
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
