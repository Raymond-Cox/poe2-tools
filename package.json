{
  "name": "poe2-tools",
  "type": "module",
  "version": "1.0.0",
  "description": "Set of tools for the Path of Exile 2 video game",
  "source": "src/index.html",
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "start": "parcel --open -p 3000",
    "clean": "rm -rf dist && rm -rf .parcel-cache",
    "build": "parcel build --public-url ./",
    "test": "jest",
    "lint": "eslint .",
    "pretty": "prettier --write .",
    "pretty-check": "prettier --check .",
    "prepare": "husky",
    "ts:check": "tsc",
    "verify": "npm run lint && npm run pretty-check && npm run ts:check && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Raymond-Cox/poe2-tools.git"
  },
  "keywords": [
    "React",
    "Path of Exile 2",
    "Video Games"
  ],
  "author": "Raymond-Cox",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Raymond-Cox/poe2-tools/issues"
  },
  "homepage": "https://github.com/Raymond-Cox/poe2-tools#readme",
  "dependencies": {
    "axios": "^1.7.9",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.7",
    "@babel/preset-react": "^7.26.3",
    "@parcel/babel-plugin-transform-runtime": "^2.13.3",
    "@parcel/babel-preset-env": "^2.13.3",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.2.0",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "babel-jest": "^29.7.0",
    "babel-plugin-react-compiler": "^19.0.0-beta-decd7b8-20250118",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-n": "^17.15.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.34.4",
    "eslint-plugin-react-compiler": "^19.0.0-beta-decd7b8-20250118",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-transform-stub": "^2.0.0",
    "lint-staged": "^15.4.2",
    "parcel": "^2.13.3",
    "prettier": "^3.4.2",
    "process": "^0.11.10",
    "typescript": "^5.7.3"
  },
  "lint-staged": {
    "*.{js,jsx}": "eslint .",
    "*.{js,css,scss,md,json,html}": "prettier --write ."
  }
}
